# ============================================
# Trading Portfolio Manager - Environment Variables
# ============================================

# Database Configuration
DB_HOST=localhost
DB_NAME=trading_portfolio
DB_USER=trading_user
DB_PASS=your_secure_password
DB_PORT=3306

# n8n Integration
N8N_WEBHOOK_SECRET=your_32_character_secret_key_here

# API Configuration
API_BASE_URL=http://localhost
PORTAL_URL=https://your-domain.com

# Alert Configuration
ALERT_EMAIL_TO=your-email@example.com
ALERT_EMAIL_FROM=noreply@your-domain.com

# SMTP Configuration (for email alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Rate Limiting
RATE_LIMIT_THRESHOLD=50

# External APIs
YAHOO_FINANCE_API_KEY=your_yahoo_finance_api_key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key
OPENAI_API_KEY=your_openai_api_key

# Signal Generation
DEFAULT_CONFIDENCE_THRESHOLD=60
MAX_SIGNALS_PER_SESSION=10

# Monitoring
HEALTH_CHECK_INTERVAL=4_hours
ENABLE_DETAILED_LOGGING=true